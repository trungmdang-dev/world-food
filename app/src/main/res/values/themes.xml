<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WorldFoodLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>


    <style name="Theme.WorldFoodDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/dark</item>
        <item name="android:windowTranslucentNavigation">false</item>

    </style>


</resources>